function Start-KudaInstall {
    $platform = $PSVersionTable.Platform
    if ($platform -ne 'Win32NT') {
        Write-Host "Detected platform: $platform"
        Write-Host "This script only runs on Windows. Exiting..."
        return
    }

    # Rest of your script logic here
    Write-Host "âœ… Hello from Kuda Tools installer!"
}

